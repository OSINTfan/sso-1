# =============================================================================
# SSO-1 Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------

# Solana cluster (devnet, testnet, mainnet-beta)
SOLANA_CLUSTER=devnet

# RPC endpoint (use your own for production)
SOLANA_RPC_URL=https://api.devnet.solana.com

# WebSocket endpoint (optional, for subscriptions)
SOLANA_WS_URL=wss://api.devnet.solana.com

# -----------------------------------------------------------------------------
# Switchboard Configuration
# -----------------------------------------------------------------------------

# Switchboard program ID (V3 On-Demand)
SWITCHBOARD_PROGRAM_ID=SW1TCH7qEPTdLsDHRgPuMQjbQxKdH2aBStViMFnt64f

# Switchboard attestation queue (devnet)
SWITCHBOARD_ATTESTATION_QUEUE=

# Function account public key (created during deployment)
SWITCHBOARD_FUNCTION_KEY=

# Function request key (for on-demand calls)
SWITCHBOARD_FUNCTION_REQUEST_KEY=

# -----------------------------------------------------------------------------
# Oracle Program Configuration
# -----------------------------------------------------------------------------

# SSO Signal program ID (set after deployment)
SSO_SIGNAL_PROGRAM_ID=

# Signal account address (set after initialization)
SSO_SIGNAL_ACCOUNT=

# Authority keypair path (for account management)
# WARNING: Keep this secure, never commit actual keypairs
AUTHORITY_KEYPAIR_PATH=./keypairs/authority.json

# -----------------------------------------------------------------------------
# Data Sources
# -----------------------------------------------------------------------------

# Comma-separated list of data source endpoints
# These are fetched inside the TEE for MarketContext derivation
DATA_SOURCE_URLS=

# API keys for data sources (if required)
# DATA_SOURCE_API_KEY_1=
# DATA_SOURCE_API_KEY_2=

# -----------------------------------------------------------------------------
# TEE Configuration
# -----------------------------------------------------------------------------

# Expected mr_enclave measurement (for verification)
# This should match the published enclave measurement
EXPECTED_MR_ENCLAVE=

# TEE platform (amd-sev-snp, intel-tdx)
TEE_PLATFORM=amd-sev-snp

# -----------------------------------------------------------------------------
# Signal Configuration
# -----------------------------------------------------------------------------

# Default asset pair for signal account
DEFAULT_ASSET_PAIR=SOL/USDC

# Default validity window in slots (1 slot â‰ˆ 400ms)
DEFAULT_VALIDITY_SLOTS=25

# Model version identifier
MODEL_VERSION=00000001

# -----------------------------------------------------------------------------
# Logging & Debugging
# -----------------------------------------------------------------------------

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable verbose TEE attestation logging
TEE_VERBOSE=false

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------

# Skip TEE verification in development (NEVER use in production)
# DEV_SKIP_TEE_VERIFICATION=false

# Use mock data sources (NEVER use in production)
# DEV_USE_MOCK_DATA=false
